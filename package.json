{
  "name": "timeflow-timer",
  "version": "1.0.0",
  "description": "Beautiful Timer, Stopwatch & Pomodoro Application",
  "main": "index.html",
  "scripts": {
    "dev": "webpack serve --config webpack.dev.js",
    "build": "webpack --config webpack.prod.js",
    "build:obfuscated": "webpack --config webpack.prod.js --env obfuscate=true",
    "protect": "npm run build:obfuscated && npm run add-watermarks",
    "add-watermarks": "node build-tools/add-watermarks.js",
    "serve": "http-server dist -p 8080"
  },
  "keywords": [
    "timer",
    "stopwatch",
    "pomodoro",
    "productivity",
    "time-tracking"
  ],
  "author": "TimeFlow",
  "license": "PROPRIETARY",
  "private": true,
  "devDependencies": {
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "webpack-merge": "^5.10.0",
    "html-webpack-plugin": "^5.5.4",
    "css-loader": "^6.8.1",
    "style-loader": "^3.3.3",
    "mini-css-extract-plugin": "^2.7.6",
    "terser-webpack-plugin": "^5.3.9",
    "javascript-obfuscator": "^4.0.2",
    "webpack-obfuscator": "^3.5.1",
    "html-minifier-terser": "^7.2.0",
    "copy-webpack-plugin": "^11.0.0",
    "http-server": "^14.1.1"
  }
}